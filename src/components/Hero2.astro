---
import { useTranslations } from '../i18n/translations';
import { buildPath } from '../utils/paths';

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---
<section id="hero" class="relative bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 dark:from-indigo-900 dark:via-purple-900 dark:to-pink-900 text-white py-24 md:py-40 overflow-hidden">
  <div class="container mx-auto text-center relative z-10 px-4">
    <div class="inline-block mb-6 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-semibold opacity-0 animate-fade-in">
      {t('hero.badge')}
    </div>
    <h1 class="text-5xl md:text-7xl font-extrabold leading-tight mb-8 animate-fade-in-up">
      {t('hero.title')}<br/>
      <span class="bg-gradient-to-r from-yellow-300 to-orange-400 bg-clip-text text-transparent">
        {t('hero.titleHighlight')}
      </span>
    </h1>
    <p class="text-xl md:text-2xl mb-12 max-w-3xl mx-auto opacity-0 animate-fade-in delay-200 leading-relaxed font-light">
      {t('hero.subtitle')}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0 animate-fade-in delay-400">
      <a href={buildPath(`/${lang}#contact`)} class="inline-flex items-center gap-2 bg-white text-purple-700 hover:bg-yellow-300 hover:text-purple-800 px-10 py-4 rounded-full text-lg font-bold shadow-2xl transform hover:scale-105 transition duration-300">
        {t('hero.cta1')}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
      <a href={buildPath(`/${lang}#services`)} class="inline-flex items-center gap-2 border-2 border-white text-white hover:bg-white hover:text-purple-700 px-10 py-4 rounded-full text-lg font-bold transition duration-300">
        {t('hero.cta2')}
      </a>
    </div>
    
    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-20 opacity-0 animate-fade-in delay-600">
      <div class="backdrop-blur-sm bg-white/10 rounded-2xl p-6">
        <div class="text-4xl font-extrabold mb-2">500+</div>
        <div class="text-sm font-medium opacity-90">{t('hero.stat1')}</div>
      </div>
      <div class="backdrop-blur-sm bg-white/10 rounded-2xl p-6">
        <div class="text-4xl font-extrabold mb-2">98%</div>
        <div class="text-sm font-medium opacity-90">{t('hero.stat2')}</div>
      </div>
      <div class="backdrop-blur-sm bg-white/10 rounded-2xl p-6">
        <div class="text-4xl font-extrabold mb-2">+300%</div>
        <div class="text-sm font-medium opacity-90">{t('hero.stat3')}</div>
      </div>
      <div class="backdrop-blur-sm bg-white/10 rounded-2xl p-6">
        <div class="text-4xl font-extrabold mb-2">24/7</div>
        <div class="text-sm font-medium opacity-90">{t('hero.stat4')}</div>
      </div>
    </div>
  </div>
  
  <!-- Abstract Shapes for Visual Interest -->
  <div class="absolute inset-0 z-0">
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute top-1/2 right-1/4 w-96 h-96 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-1/4 left-1/2 w-80 h-80 bg-indigo-400 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
  </div>
  
  <!-- Floating particles -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-2 h-2 bg-white rounded-full animate-float"></div>
    <div class="absolute top-40 right-20 w-3 h-3 bg-yellow-300 rounded-full animate-float animation-delay-2000"></div>
    <div class="absolute bottom-40 left-1/4 w-2 h-2 bg-pink-300 rounded-full animate-float animation-delay-4000"></div>
    <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-white rounded-full animate-float animation-delay-3000"></div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes blob {
    0%, 100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(0px, 0px) scale(1);
    }
    25% {
      border-radius: 40% 60% 70% 30% / 40% 70% 30% 60%;
      transform: translate(30px, -40px) scale(1.1);
    }
    50% {
      border-radius: 70% 30% 60% 40% / 70% 40% 60% 30%;
      transform: translate(-30px, 30px) scale(0.9);
    }
    75% {
      border-radius: 30% 70% 40% 60% / 30% 60% 40% 70%;
      transform: translate(40px, 20px) scale(1.15);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-30px) translateX(20px);
      opacity: 0.8;
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out forwards;
  }
  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }
  .animate-fade-in.delay-200 {
    animation-delay: 0.2s;
  }
  .animate-fade-in.delay-400 {
    animation-delay: 0.4s;
  }
  .animate-fade-in.delay-600 {
    animation-delay: 0.6s;
  }
  .animate-blob {
    animation: blob 10s infinite ease-in-out;
  }
  .animate-blob.animation-delay-2000 {
    animation-delay: 2s;
  }
  .animate-blob.animation-delay-4000 {
    animation-delay: 4s;
  }
  .animate-float {
    animation: float 6s infinite ease-in-out;
  }
  .animate-float.animation-delay-2000 {
    animation-delay: 2s;
  }
  .animate-float.animation-delay-3000 {
    animation-delay: 3s;
  }
  .animate-float.animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
