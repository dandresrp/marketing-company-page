---
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="contact" class="py-20 md:py-32 bg-gradient-to-b from-gray-50 to-white dark:from-gray-800 dark:to-gray-900">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-sm font-semibold mb-4">
        {t('contact.badge')}
      </span>
      <h2 class="text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white mb-6">
        {t('contact.title')}<br/>
        <span class="block mt-2 bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
          {t('contact.titleHighlight')}
        </span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>

    <div class="max-w-6xl mx-auto grid lg:grid-cols-2 gap-8 items-stretch">
      <!-- Contact Form -->
      <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-3xl shadow-2xl border border-gray-100 dark:border-gray-700 flex flex-col">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">{t('contact.form.title')}</h3>
        <form class="space-y-5 text-left flex-grow flex flex-col">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
              <label for="name" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.name')} *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                placeholder="Juan Pérez"
                aria-label={t('contact.form.name')}
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.email')} *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                placeholder="tu@empresa.com"
                aria-label={t('contact.form.email')}
              />
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
              <label for="phone" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.phone')}</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                placeholder="+34 600 000 000"
                aria-label={t('contact.form.phone')}
              />
            </div>
            <div>
              <label for="company" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.company')}</label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                placeholder="Tu Empresa S.L."
                aria-label={t('contact.form.company')}
              />
            </div>
          </div>
          <div>
            <label for="service" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.service')}</label>
            <select
              id="service"
              name="service"
              class="w-full py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
            >
              <option value="">{t('contact.form.service.placeholder')}</option>
              <option value="seo">{t('contact.form.service.seo')}</option>
              <option value="social">{t('contact.form.service.social')}</option>
              <option value="content">{t('contact.form.service.content')}</option>
              <option value="ppc">{t('contact.form.service.ppc')}</option>
              <option value="web">{t('contact.form.service.web')}</option>
              <option value="email">{t('contact.form.service.email')}</option>
              <option value="other">{t('contact.form.service.other')}</option>
            </select>
          </div>
          <div class="flex-grow flex flex-col">
            <label for="message" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">{t('contact.form.message')} *</label>
            <textarea
              id="message"
              name="message"
              required
              class="w-full flex-grow py-3 px-4 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 resize-none min-h-[120px]"
              placeholder={t('contact.form.message.placeholder')}
              aria-label={t('contact.form.message')}
            ></textarea>
          </div>
          <div class="mt-auto space-y-3">
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-4 px-8 rounded-xl focus:outline-none focus:shadow-outline transform hover:scale-[1.02] transition duration-300 shadow-lg"
            >
              {t('contact.form.submit')}
            </button>
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              {t('contact.form.note')}
            </p>
          </div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8 flex flex-col">
        <!-- Info Cards -->
        <div class="bg-gradient-to-br from-purple-600 to-indigo-700 dark:from-purple-800 dark:to-indigo-900 text-white p-8 rounded-3xl shadow-xl flex-shrink-0">
          <h3 class="text-2xl font-bold mb-6">{t('contact.info.title')}</h3>
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold mb-1">{t('contact.info.email')}</div>
                <a href="mailto:info@marketingpro.com" class="text-purple-100 hover:text-white transition">info@marketingpro.com</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold mb-1">{t('contact.info.phone')}</div>
                <a href="tel:+34912345678" class="text-purple-100 hover:text-white transition">+34 912 34 56 78</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold mb-1">{t('contact.info.office')}</div>
                <p class="text-purple-100">Calle Gran Vía 123, 5º<br/>28001 Madrid, España</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold mb-1">{t('contact.info.hours')}</div>
                <p class="text-purple-100">{t('contact.info.hours.weekdays')}<br/>{t('contact.info.hours.saturday')}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Why Choose Us -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-700 flex-shrink-0">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">{t('contact.why.title')}</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <div class="font-semibold text-gray-900 dark:text-white">{t('contact.why.1.title')}</div>
                <p class="text-gray-600 dark:text-gray-300 text-sm">{t('contact.why.1.description')}</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <div class="font-semibold text-gray-900 dark:text-white">{t('contact.why.2.title')}</div>
                <p class="text-gray-600 dark:text-gray-300 text-sm">{t('contact.why.2.description')}</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <div class="font-semibold text-gray-900 dark:text-white">{t('contact.why.3.title')}</div>
                <p class="text-gray-600 dark:text-gray-300 text-sm">{t('contact.why.3.description')}</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <div class="font-semibold text-gray-900 dark:text-white">{t('contact.why.4.title')}</div>
                <p class="text-gray-600 dark:text-gray-300 text-sm">{t('contact.why.4.description')}</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
