---
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="about" class="relative py-20 md:py-32 bg-gradient-to-br from-purple-700 via-indigo-800 to-blue-900 dark:from-purple-950 dark:via-indigo-950 dark:to-blue-950 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-500 rounded-full filter blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <!-- Content -->
      <div class="lg:w-1/2 space-y-6">
        <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
          {t('about.badge')}
        </span>
        <h2 class="text-5xl md:text-6xl font-extrabold leading-tight">
          {t('about.title')}
          <span class="block mt-2 bg-gradient-to-r from-yellow-300 to-orange-400 bg-clip-text text-transparent">
            {t('about.titleHighlight')}
          </span>
        </h2>
        <p class="text-xl leading-relaxed text-purple-100">
          {t('about.description1')}
        </p>
        <p class="text-lg leading-relaxed text-purple-200">
          {t('about.description2')}
        </p>
        
        <!-- Key Values -->
        <div class="grid grid-cols-2 gap-6 pt-6">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-yellow-400 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-lg mb-1">{t('about.value1.title')}</h4>
              <p class="text-sm text-purple-200">{t('about.value1.description')}</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-pink-400 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-lg mb-1">{t('about.value2.title')}</h4>
              <p class="text-sm text-purple-200">{t('about.value2.description')}</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-blue-400 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-lg mb-1">{t('about.value3.title')}</h4>
              <p class="text-sm text-purple-200">{t('about.value3.description')}</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-green-400 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-lg mb-1">{t('about.value4.title')}</h4>
              <p class="text-sm text-purple-200">{t('about.value4.description')}</p>
            </div>
          </div>
        </div>
        
        <div class="pt-8">
          <a href={`/${lang}#contact`} class="inline-flex items-center gap-2 bg-white text-purple-700 hover:bg-yellow-300 px-8 py-4 rounded-full text-lg font-bold shadow-xl transform hover:scale-105 transition duration-300">
            {t('about.cta')}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Stats Grid -->
      <div class="lg:w-1/2">
        <div class="grid grid-cols-2 gap-6">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="text-6xl font-extrabold mb-3 bg-gradient-to-r from-yellow-300 to-orange-400 bg-clip-text text-transparent">500+</div>
            <div class="text-lg font-semibold mb-2">{t('about.stat1')}</div>
            <p class="text-sm text-purple-200">{t('about.stat1.description')}</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="text-6xl font-extrabold mb-3 bg-gradient-to-r from-pink-300 to-purple-400 bg-clip-text text-transparent">98%</div>
            <div class="text-lg font-semibold mb-2">{t('about.stat2')}</div>
            <p class="text-sm text-purple-200">{t('about.stat2.description')}</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="text-6xl font-extrabold mb-3 bg-gradient-to-r from-green-300 to-teal-400 bg-clip-text text-transparent">+300%</div>
            <div class="text-lg font-semibold mb-2">{t('about.stat3')}</div>
            <p class="text-sm text-purple-200">{t('about.stat3.description')}</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/15 transition-all duration-300">
            <div class="text-6xl font-extrabold mb-3 bg-gradient-to-r from-blue-300 to-cyan-400 bg-clip-text text-transparent">6+</div>
            <div class="text-lg font-semibold mb-2">{t('about.stat4')}</div>
            <p class="text-sm text-purple-200">{t('about.stat4.description')}</p>
          </div>
        </div>
        
        <!-- Testimonial -->
        <div class="mt-8 bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="flex items-center gap-1 mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
              </svg>
            ))}
          </div>
          <p class="text-lg italic mb-4">"{t('about.testimonial.quote')}"</p>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center font-bold text-xl">
              A
            </div>
            <div>
              <div class="font-semibold">{t('about.testimonial.author')}</div>
              <div class="text-sm text-purple-200">{t('about.testimonial.position')}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
