---
import { languages } from '../i18n/translations';
import { buildPath } from '../utils/paths';

const { currentLang = 'es' } = Astro.props;
---

<div class="relative language-selector">
  <button
    type="button"
    class="language-button flex items-center gap-2 px-3 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200"
    aria-label="Select language"
  >
    <svg class="w-5 h-5 text-gray-700 dark:text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
    </svg>
    <span class="text-sm font-semibold text-gray-700 dark:text-gray-200 uppercase">{currentLang}</span>
    <svg class="w-4 h-4 text-gray-700 dark:text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  
  <div
    class="language-dropdown hidden absolute right-0 mt-2 w-40 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 z-[9999]"
  >
    {Object.entries(languages).map(([code, name]) => (
      <a
        href={buildPath(`/${code}`)}
        class={`block px-4 py-3 text-sm hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors ${
          code === currentLang 
            ? 'text-purple-600 dark:text-purple-400 font-bold bg-purple-50 dark:bg-purple-900/20' 
            : 'text-gray-700 dark:text-gray-200'
        } ${code === 'es' ? 'rounded-t-lg' : code === 'en' ? 'rounded-b-lg' : ''}`}
      >
        {name}
      </a>
    ))}
  </div>
</div>
